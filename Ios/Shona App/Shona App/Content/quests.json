    {
      "id": "quest-5",
      "title": "The Great Baobab Tree",
      "activities": [
        {
          "type": "story_listening",
          "title": "The Legend of the First Baobab",
          "description": "Listen to the ancient story of how the baobab tree came to be",
          "content": {
            "shona_text": "Kare kare, muti mukuru wakanga uri mudenga. Mwari akati, 'Buruka uzogara pasi.' Asi muti wakanga usingatende. Saka Mwari akaumisa musoro pasi, midzi ichitarisa kudenga.",
            "english_text": "Long, long ago, a great tree lived in the heavens. God said, 'Come down and live on earth.' But the tree was not humble. So God planted it upside down, with roots pointing to the sky.",
            "vocabulary": [
              {"shona": "kare", "english": "long ago"},
              {"shona": "muti", "english": "tree"},
              {"shona": "mukuru", "english": "big/great"},
              {"shona": "denga", "english": "sky/heaven"},
              {"shona": "Mwari", "english": "God"},
              {"shona": "buruka", "english": "come down"},
              {"shona": "pasi", "english": "down/earth"},
              {"shona": "midzi", "english": "roots"}
            ]
          }
        },
        {
          "type": "interactive_story",
          "title": "Choose Your Own Adventure",
          "description": "Make choices in a traditional Shona story",
          "scenarios": [
            {
              "situation": "You find a talking hare by the river",
              "options": [
                {"text": "Greet the hare politely", "shona": "Mhoro, tsuro", "outcome": "The hare shares wisdom about patience"},
                {"text": "Ask the hare for help", "shona": "Tsuro, ndibatsirei", "outcome": "The hare teaches you about community"},
                {"text": "Ignore the hare", "shona": "Kusataura", "outcome": "The hare reminds you about respect"}
              ]
            }
          ]
        },
        {
          "type": "storytelling_practice",
          "title": "Tell Your Own Story",
          "description": "Create a short story using Shona vocabulary",
          "prompts": [
            "A clever animal teaches a lesson",
            "A kind person helps their community",
            "A brave child faces a challenge"
          ],
          "vocabulary_bank": [
            {"shona": "chakafunga", "english": "clever"},
            {"shona": "mutsa", "english": "kind"},
            {"shona": "ushingi", "english": "brave"},
            {"shona": "mufundisi", "english": "teacher"},
            {"shona": "shakakai", "english": "community"}
          ]
        }
      ]
    },
    {
      "id": "quest-6",
      "title": "Harvest Festival Celebration",
      "activities": [
        {
          "type": "festival_planning",
          "title": "Plan the Harvest Festival",
          "description": "Help organize the village celebration",
          "tasks": [
            {
              "task": "Choose traditional foods",
              "options": [
                {"shona": "sadza", "english": "cornmeal staple", "cultural_note": "The foundation of every Shona meal"},
                {"shona": "matemba", "english": "dried fish", "cultural_note": "Protein source, often shared"},
                {"shona": "mufushwa", "english": "dried vegetables", "cultural_note": "Nutritious greens, prepared by women"},
                {"shona": "dovi", "english": "peanut butter stew", "cultural_note": "Rich, ceremonial dish"}
              ]
            },
            {
              "task": "Select traditional music",
              "options": [
                {"shona": "mbira", "english": "thumb piano", "cultural_note": "Sacred instrument for ceremonies"},
                {"shona": "hosho", "english": "shakers", "cultural_note": "Accompanies mbira music"},
                {"shona": "ngoma", "english": "drums", "cultural_note": "Calls the community together"}
              ]
            }
          ]
        },
        {
          "type": "recipe_challenge",
          "title": "Cook Traditional Dishes",
          "description": "Learn to prepare Shona foods",
          "recipes": [
            {
              "dish": "Sadza",
              "ingredients": [
                {"shona": "upfu", "english": "cornmeal"},
                {"shona": "mvura", "english": "water"},
                {"shona": "munyu", "english": "salt"}
              ],
              "steps": [
                "Boil water - pisa mvura",
                "Add cornmeal slowly - wedzera upfu zvishoma",
                "Stir constantly - sandura nguva dzose",
                "Cook until thick - bika kusvika zvakakora"
              ]
            }
          ]
        },
        {
          "type": "gratitude_circle",
          "title": "Express Gratitude",
          "description": "Share what you're thankful for",
          "phrases": [
            {"shona": "Ndinotenda", "english": "I am grateful"},
            {"shona": "Mwari akatipa", "english": "God has given us"},
            {"shona": "Tinofara", "english": "We are happy"},
            {"shona": "Rugare", "english": "Peace"}
          ]
        }
      ]
