    {
      "id": "quest-8",
      "title": "The Wisdom Keeper's Challenge",
      "activities": [
        {
          "type": "proverb_puzzle",
          "title": "Decode the Wisdom",
          "description": "Solve puzzles hidden in Shona proverbs",
          "proverbs": [
            {
              "shona": "Chara chimwe hachitswanye inda",
              "english": "One finger cannot crush a louse",
              "meaning": "Teamwork is essential",
              "puzzle": "What happens when people work together?",
              "answer": "They accomplish more than working alone"
            },
            {
              "shona": "Chakafukidza dzimba matenga",
              "english": "What covers houses is the roof",
              "meaning": "Leadership protects the community",
              "puzzle": "Who keeps the community safe?",
              "answer": "Good leaders"
            },
            {
              "shona": "Kurima mukadzi kurima vaviri",
              "english": "When a woman farms, two people are farming",
              "meaning": "Women's work benefits everyone",
              "puzzle": "Why is women's work so valuable?",
              "answer": "It supports the whole family"
            }
          ]
        },
        {
          "type": "riddle_challenge",
          "title": "Ancient Riddles",
          "description": "Solve traditional Shona riddles",
          "riddles": [
            {
              "question": "What has no legs but can travel far?",
              "shona": "Chii chisina makumbo asi chinofamba kure?",
              "answer": "News/rumors",
              "shona_answer": "Mashoko/makuhwa"
            },
            {
              "question": "What grows taller when it sits down?",
              "shona": "Chii chinokura kana chakagara pasi?",
              "answer": "Smoke",
              "shona_answer": "Utsi"
            },
            {
              "question": "What has many children but is never pregnant?",
              "shona": "Chii chine vana vazhinji asi chisina kumba?",
              "answer": "A tree",
              "shona_answer": "Muti"
            }
          ]
        },
        {
          "type": "wisdom_creation",
          "title": "Create Your Own Wisdom",
          "description": "Make new proverbs based on your experience",
          "prompts": [
            "Think about a lesson you learned from making mistakes",
            "Consider what you know about friendship",
            "Reflect on what makes a person wise"
          ]
        }
      ]
    },
