{
  "culturalEnhancementFramework": {
    "version": "1.0",
    "scope": "480 vocabulary items comprehensive cultural integration",
    "approach": "Respectful diaspora-focused cultural learning",
    
    "culturalFieldsStructure": {
      "description": "Enhanced structure for each vocabulary item's cultural field",
      "requiredFields": {
        "cultural": {
          "significance": {
            "type": "string",
            "description": "Deep cultural meaning and importance",
            "examples": ["Central to family hierarchy", "Sacred to ancestral communication", "Symbol of liberation struggle"]
          },
          "usage_context": {
            "type": "string", 
            "description": "When, where, and how the word is used",
            "examples": ["Used only with elders", "Formal ceremonies only", "Daily family interactions"]
          },
          "respect_level": {
            "type": "enum",
            "values": ["casual", "formal", "sacred", "taboo"],
            "description": "Level of cultural respect required"
          },
          "regional_notes": {
            "type": "object",
            "properties": {
              "zezuru": "string",
              "karanga": "string", 
              "manyika": "string",
              "korekore": "string",
              "variations": "array"
            }
          },
          "generational_notes": {
            "type": "object",
            "properties": {
              "elders": "string",
              "adults": "string",
              "youth": "string", 
              "modern_usage": "string"
            }
          },
          "related_customs": {
            "type": "array",
            "items": "string",
            "description": "Associated customs, rituals, or practices"
          },
          "taboos": {
            "type": "string",
            "description": "What to avoid or be careful about"
          },
          "diaspora_notes": {
            "type": "string",
            "description": "How word is used/adapted in diaspora communities"
          },
          "proverbs": {
            "type": "array",
            "items": {
              "shona": "string",
              "english": "string",
              "meaning": "string"
            }
          },
          "historical_context": {
            "type": "string",
            "description": "Historical significance if applicable"
          }
        }
      }
    },

    "culturalCompetencyLevels": {
      "beginner": {
        "name": "Cultural Awareness",
        "description": "Basic respect protocols and greetings",
        "skills": [
          "Proper greeting protocols",
          "Basic family respect terms", 
          "Understanding hunhu/ubuntu principles",
          "Recognizing formal vs informal language"
        ],
        "vocabulary_focus": ["greetings", "family_basic", "respect_terms", "daily_interactions"],
        "assessment_criteria": [
          "Can greet appropriately by context",
          "Uses correct respect levels",
          "Recognizes cultural sensitivity"
        ]
      },
      "intermediate": {
        "name": "Social Navigation", 
        "description": "Community participation and social understanding",
        "skills": [
          "Family hierarchy navigation",
          "Community meeting participation",
          "Traditional food culture",
          "Regional variation awareness"
        ],
        "vocabulary_focus": ["extended_family", "community_roles", "traditional_practices", "regional_terms"],
        "assessment_criteria": [
          "Navigates family relationships correctly",
          "Participates appropriately in community settings",
          "Understands cultural context of interactions"
        ]
      },
      "advanced": {
        "name": "Ceremony Participation",
        "description": "Traditional ceremony understanding with boundaries",
        "skills": [
          "Ceremonial language comprehension",
          "Traditional music and dance context",
          "Ancestor veneration basics",
          "Sacred vs public knowledge distinction"
        ],
        "vocabulary_focus": ["ceremonial_terms", "spiritual_concepts", "traditional_music", "sacred_practices"],
        "assessment_criteria": [
          "Respects ceremonial boundaries",
          "Understands sacred language register",
          "Recognizes appropriate participation levels"
        ],
        "warnings": [
          "Some knowledge requires elder guidance",
          "Respect initiation-only knowledge boundaries",
          "Seek permission before ceremonial participation"
        ]
      },
      "expert": {
        "name": "Cultural Ambassador",
        "description": "Deep cultural understanding and teaching ability",
        "skills": [
          "Teaching cultural concepts to others",
          "Regional variation expertise", 
          "Historical context mastery",
          "Diaspora adaptation understanding"
        ],
        "vocabulary_focus": ["complete_vocabulary", "historical_terms", "philosophical_concepts", "modern_adaptations"],
        "assessment_criteria": [
          "Can explain cultural concepts to others",
          "Bridges traditional and modern contexts",
          "Facilitates cross-cultural understanding"
        ]
      }
    },

    "culturalLearningPaths": {
      "meeting_the_family": {
        "title": "Meeting the Family",
        "description": "Progressive family interaction skills",
        "stages": [
          {
            "level": "basic_introductions",
            "vocabulary": ["baba", "amai", "mwana", "mhoroi", "mhoro"],
            "cultural_focus": "Basic family respect and greetings",
            "scenarios": ["First meeting with parents", "Greeting children appropriately"]
          },
          {
            "level": "extended_family",
            "vocabulary": ["babamukuru", "tete", "sekuru", "ambuya", "muzukuru"],
            "cultural_focus": "Family hierarchy and extended relationships",
            "scenarios": ["Family gatherings", "Understanding obligations and respect"]
          },
          {
            "level": "family_ceremonies",
            "vocabulary": ["roora", "kuraguza", "kucheka ukama"],
            "cultural_focus": "Family ceremonial participation",
            "scenarios": ["Wedding discussions", "Family ritual observation"]
          }
        ]
      },
      "community_participation": {
        "title": "Community Participation",
        "description": "Engaging with Shona communities",
        "stages": [
          {
            "level": "market_interactions",
            "vocabulary": ["musika", "kutenga", "kutengesera", "mitengo"],
            "cultural_focus": "Market culture and bargaining etiquette",
            "scenarios": ["Shopping at traditional markets", "Building vendor relationships"]
          },
          {
            "level": "community_meetings",
            "vocabulary": ["dare", "mukuru", "sangano", "kuronga"],
            "cultural_focus": "Community decision-making processes",
            "scenarios": ["Village meetings", "Community problem-solving"]
          },
          {
            "level": "celebrations",
            "vocabulary": ["mutambo", "mafaro", "mukombrero", "kusangana"],
            "cultural_focus": "Community celebrations and festivals",
            "scenarios": ["Independence Day", "Harvest celebrations", "Community achievements"]
          }
        ]
      },
      "traditional_ceremonies": {
        "title": "Traditional Ceremonies (Guided)",
        "description": "Understanding ceremonial contexts with proper boundaries",
        "boundary_notice": "This path requires elder guidance and permission",
        "stages": [
          {
            "level": "observation_only",
            "vocabulary": ["bira", "svikiro", "midzimu", "mbira"],
            "cultural_focus": "Understanding ceremonial elements as observer",
            "scenarios": ["Respectful observation", "Understanding spiritual significance"],
            "restrictions": ["No participation without permission", "Follow elder guidance"]
          },
          {
            "level": "basic_participation",
            "vocabulary": ["kurova guva", "kukumbira", "kumira", "runyararo"],
            "cultural_focus": "Limited participation in appropriate ceremonies",
            "scenarios": ["Memorial services", "Family blessings"],
            "requirements": ["Elder approval", "Cultural mentor present"]
          }
        ]
      },
      "modern_zimbabwe": {
        "title": "Modern Zimbabwe Context",
        "description": "Contemporary Shona culture and adaptations",
        "stages": [
          {
            "level": "urban_culture",
            "vocabulary": ["guta", "magitare", "computer", "internet"],
            "cultural_focus": "Urban Shona culture and modern adaptations",
            "scenarios": ["City life navigation", "Technology integration"]
          },
          {
            "level": "global_connections", 
            "vocabulary": ["diaspora", "kuenda kunze", "kugara kunze", "hukama"],
            "cultural_focus": "Diaspora connections and global Shona identity",
            "scenarios": ["Maintaining culture abroad", "Cross-cultural connections"]
          }
        ]
      }
    },

